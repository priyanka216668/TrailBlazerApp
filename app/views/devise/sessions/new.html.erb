<br>
<div class="container" >
  <h2 >Log in</h2>
    <div class="form-inputs" >
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tr>
            <td> Email</td>
            <td> <%= f.email_field :email, required: false, autofocus: true, :class => "form-control" %> </td>
          </tr>
          <tr>
             <td> Password</td>
            <td> <%= f.password_field :password, required: false, :class => "form-control" %></td>
          </tr>
          <tr>
            <td> <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></td>
         </tr>
         <tr>
            <td><%= f.submit 'Log in', :class => "btn btn-primary"%></td>
        </tr>
        </table>
      <% end %>
    </div>   
</div>
